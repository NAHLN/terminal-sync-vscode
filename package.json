{
  "_comment_artifact": "terminal-sync-package",
  "_comment_version": "1.1.0",
  "name": "terminal-file-explorer",
  "displayName": "Terminal Directory Navigator",
  "description": "File browser that syncs with terminal cd commands and displays ls output in a table view",
  "version": "1.1.0",
  "publisher": "your-publisher-name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/NAHLN/terminal-sync-vscode.git"
  },
  "bugs": {
    "url": "https://github.com/NAHLN/terminal-sync-vscode/issues" 
  },
  "homepage": "https://github.com/NAHLN/terminal-sync-vscode#readme",
  "keywords": [
    "terminal",
    "file-browser",
    "ls",
    "directory",
    "navigation",
    "codespaces"
  ],
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "terminalFileExplorerView",
          "title": "Terminal File Explorer",
          "icon": "$(terminal)"
        }
      ]
    },
    "views": {
      "terminalFileExplorerView": [
        {
          "id": "terminalFileExplorer",
          "name": "Directory Tree",
          "type": "tree"
        },
        {
          "id": "terminalLsTable",
          "name": "LS Table",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "terminal-file-explorer.refresh",
        "title": "Directory Navigator: Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "terminal-file-explorer.revealCurrentDirectory",
        "title": "Directory Navigator: Reveal Current Directory",
        "icon": "$(eye)"
      },
      {
        "command": "terminal-file-explorer.changeDirectory",
        "title": "Change to this directory"
      },
      {
        "command": "terminal-file-explorer.getCurrentDirectory",
        "title": "Directory Navigator: Show Current Directory"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "terminal-file-explorer.refresh",
          "when": "view == terminalFileExplorer",
          "group": "navigation"
        },
        {
          "command": "terminal-file-explorer.revealCurrentDirectory",
          "when": "view == terminalFileExplorer",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.40.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "ssh2-sftp-client": "^10.0.3"
  }
}
