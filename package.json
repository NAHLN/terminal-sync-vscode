{
  "_comment_artifact": "terminal-sync-package",
  "_comment_version": "1.0.1",
  "name": "terminal-file-explorer",
  "displayName": "Terminal-Synced File Explorer",
  "description": "File browser that syncs with terminal cd commands via SSH/SFTP",
  "version": "1.0.0",
  "publisher": "your-publisher-name",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "terminal-file-explorer",
          "title": "Remote Files",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "terminal-file-explorer": [
        {
          "id": "terminalFileExplorer",
          "name": "Remote File Browser"
        }
      ]
    },
    "commands": [
      {
        "command": "terminal-file-explorer.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "terminal-file-explorer.connect",
        "title": "Terminal Explorer: Connect to SSH Host",
        "icon": "$(plug)"
      },
      {
        "command": "terminal-file-explorer.changeDirectory",
        "title": "Change to this directory"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "terminal-file-explorer.refresh",
          "when": "view == terminalFileExplorer",
          "group": "navigation"
        },
        {
          "command": "terminal-file-explorer.connect",
          "when": "view == terminalFileExplorer",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/ssh2": "^1.11.0",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.40.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "node-pty": "^1.0.0",
    "ssh2-sftp-client": "^10.0.3"
  }
}
